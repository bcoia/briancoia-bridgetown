<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% render "head", metadata: site.metadata, title: resource.data.title %}
  </head>
  <body class="{{ resource.data.layout }} {{ resource.data.page_class }} bg-slate-200 dark:bg-slate-800 text-slate-900 dark:text-slate-200 transition-colors animate">
    {% render "navbar", metadata: site.metadata, resource: resource, menu: site.data.menu %}

    <main class="flex flex-col content-center max-w-prose mx-auto">
      {{ content }}
    </main>

    {% render "footer", metadata: site.metadata %}
  </body>
</html>
